    <!-- 通知 -->
    <div id="notification" class="notification">
        <i id="notificationIcon" class="fas fa-info-circle"></i>
        <span id="notificationMessage">这是一条通知</span>
    </div>

    <script>
        // DOM元素
        const inputText = document.getElementById('inputText');
        const charCount = document.getElementById('charCount');
        const encodeBtn = document.getElementById('encodeBtn');
        const clearInputBtn = document.getElementById('clearInputBtn');
        const encodedCanvas = document.getElementById('encodedCanvas');
        const downloadBtn = document.getElementById('downloadBtn');
        const imageInput = document.getElementById('imageInput');
        const decodeBtn = document.getElementById('decodeBtn');
        const clearOutputBtn = document.getElementById('clearOutputBtn');
        const decodedText = document.getElementById('decodedText');
        const copyTextBtn = document.getElementById('copyTextBtn');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const notification = document.getElementById('notification');
        const notificationIcon = document.getElementById('notificationIcon');
        const notificationMessage = document.getElementById('notificationMessage');
        
        // 常量定义
        const MAX_CHARS = 196000; // 980*1400/7 = 196000个字符
        const CANVAS_WIDTH = 980;
        const CANVAS_HEIGHT = 1400;
        const TOTAL_PIXELS = CANVAS_WIDTH * CANVAS_HEIGHT; // 1,372,000像素
        
        // 初始化
        document.addEventListener('DOMContentLoaded', function() {
            updateCharCount();
            setupEventListeners();
        });
        
        // 设置事件监听器
        function setupEventListeners() {
            // 输入文本变化
            inputText.addEventListener('input', updateCharCount);
            
            // 编码按钮
            encodeBtn.addEventListener('click', encodeTextToImage);
            
            // 清空输入按钮
            clearInputBtn.addEventListener('click', () => {
                inputText.value = '';
                updateCharCount();
                hideCanvas();
                downloadBtn.disabled = true;
                showNotification('输入已清空', 'info');
            });
            
            // 下载按钮
            downloadBtn.addEventListener('click', downloadImage);
            
            // 图像文件选择
            imageInput.addEventListener('change', function() {
                decodeBtn.disabled = !this.files.length;
            });
            
            // 解码按钮
            decodeBtn.addEventListener('click', decodeImageToText);
            
            // 清空输出按钮
            clearOutputBtn.addEventListener('click', () => {
                decodedText.textContent = '解码后的文本将在这里显示';
                copyTextBtn.disabled = true;
                imageInput.value = '';
                decodeBtn.disabled = true;
                showNotification('输出已清空', 'info');
            });
            
            // 复制文本按钮
            copyTextBtn.addEventListener('click', copyDecodedText);
        }
        
        // 更新字符计数
        function updateCharCount() {
            const text = inputText.value;
            const count = text.length;
            
            charCount.textContent = `字符数: ${count.toLocaleString()} / ${MAX_CHARS.toLocaleString()}`;
            
            // 检查是否超过限制
            if (count > MAX_CHARS) {
                charCount.classList.add('error');
                encodeBtn.disabled = true;
                charCount.textContent += ' (超过最大限制!)';
            } else if (count > MAX_CHARS * 0.9) {
                charCount.classList.add('warning');
                encodeBtn.disabled = false;
            } else {
                charCount.classList.remove('error', 'warning');
                encodeBtn.disabled = false;
            }
            
            // 验证是否为ASCII字符
            const nonAsciiChars = findNonAsciiChars(text);
            if (nonAsciiChars.length > 0) {
                charCount.classList.add('error');
                encodeBtn.disabled = true;
                charCount.textContent += ` (发现${nonAsciiChars.length}个非ASCII字符)`;
            }
        }
        
        // 查找非ASCII字符
        function findNonAsciiChars(text) {
            const nonAscii = [];
            for (let i = 0; i < text.length; i++) {
                if (text.charCodeAt(i) > 127) {
                    nonAscii.push({
                        char: text[i],
                        position: i,
                        code: text.charCodeAt(i)
                    });
                }
            }
            return nonAscii;
        }
        
        // 编码文本为图像
        function encodeTextToImage() {
            const text = inputText.value;
            
            // 验证输入
            if (text.length === 0) {
                showNotification('请输入要编码的文本', 'error');
                return;
            }
            
            if (text.length > MAX_CHARS) {
                showNotification(`文本过长，最多支持${MAX_CHARS}个字符`, 'error');
                return;
            }
            
            const nonAsciiChars = findNonAsciiChars(text);
            if (nonAsciiChars.length > 0) {
                showNotification(`发现${nonAsciiChars.length}个非ASCII字符，仅支持ASCII字符(0-127)`, 'error');
                return;
            }
            
            // 显示加载指示器
            showLoading(true);
            
            // 使用setTimeout避免阻塞UI
            setTimeout(() => {
                try {
                    // 将文本转换为二进制字符串
                    const binaryString = textToBinary(text);
                    
                    // 创建图像
                    createBinaryImage(binaryString);
                    
                    // 显示图像
                    displayEncodedImage();
                    
                    // 启用下载按钮
                    downloadBtn.disabled = false;
                    
                    showNotification(`编码成功！将${text.length}个字符编码为${binaryString.length}位二进制数据`, 'success');
                } catch (error) {
                    console.error('编码错误:', error);
                    showNotification('编码过程中发生错误: ' + error.message, 'error');
                } finally {
                    showLoading(false);
                }
            }, 100);
        }
        
        // 将文本转换为二进制字符串
        function textToBinary(text) {
            let binaryString = '';
            
            // 将每个字符转换为7位二进制
            for (let i = 0; i < text.length; i++) {
                const charCode = text.charCodeAt(i);
                if (charCode > 127) {
                    throw new Error(`字符 "${text[i]}" (位置 ${i}) 不是有效的ASCII字符`);
                }
                
                // 转换为7位二进制，不足7位前面补0
                const binary = charCode.toString(2).padStart(7, '0');
                binaryString += binary;
            }
            
            // 如果二进制字符串长度不足TOTAL_PIXELS，用0填充（NULL）
            if (binaryString.length < TOTAL_PIXELS) {
                binaryString = binaryString.padEnd(TOTAL_PIXELS, '0');
            }
            // 如果超过TOTAL_PIXELS，截断（理论上不会发生，因为字符数有限制）
            else if (binaryString.length > TOTAL_PIXELS) {
                binaryString = binaryString.substring(0, TOTAL_PIXELS);
            }
            
            return binaryString;
        }
        
        // 创建二进制图像
        function createBinaryImage(binaryString) {
            const ctx = encodedCanvas.getContext('2d');
            const imageData = ctx.createImageData(CANVAS_WIDTH, CANVAS_HEIGHT);
            const data = imageData.data;
            
            // 用白色填充整个画布
            for (let i = 0; i < data.length; i += 4) {
                data[i] = 255;     // R
                data[i+1] = 255;   // G
                data[i+2] = 255;   // B
                data[i+3] = 255;   // A
            }
            
            // 根据二进制字符串设置像素颜色
            for (let i = 0; i < binaryString.length && i < TOTAL_PIXELS; i++) {
                const bit = binaryString[i];
                const pixelIndex = i * 4;
                
                // 如果是1，则设置为黑色
                if (bit === '1') {
                    data[pixelIndex] = 0;     // R
                    data[pixelIndex+1] = 0;   // G
                    data[pixelIndex+2] = 0;   // B
                    // A保持255不变
                }
            }
            
            ctx.putImageData(imageData, 0, 0);
        }
        
        // 显示编码后的图像
        function displayEncodedImage() {
            const imageOutput = document.getElementById('imageOutput');
            const placeholder = imageOutput.querySelector('.image-placeholder');
            const canvas = document.getElementById('encodedCanvas');
            
            // 隐藏占位符，显示画布
            placeholder.style.display = 'none';
            canvas.style.display = 'block';
            
            // 创建图像预览（缩放以适应容器）
            const previewCanvas = document.createElement('canvas');
            const previewCtx = previewCanvas.getContext('2d');
            
            // 设置预览尺寸（保持宽高比）
            const maxWidth = imageOutput.clientWidth - 30;
            const scale = maxWidth / CANVAS_WIDTH;
            const previewHeight = CANVAS_HEIGHT * scale;
            
            previewCanvas.width = maxWidth;
            previewCanvas.height = previewHeight;
            
            // 绘制缩放后的图像
            previewCtx.drawImage(encodedCanvas, 0, 0, CANVAS_WIDTH, CANVAS_HEIGHT, 
                                0, 0, maxWidth, previewHeight);
            
            // 替换原来的canvas
            imageOutput.appendChild(previewCanvas);
            canvas.style.display = 'none';
            
            // 如果已经存在预览canvas，则移除
            const existingPreview = imageOutput.querySelector('canvas:not(#encodedCanvas)');
            if (existingPreview && existingPreview !== previewCanvas) {
                existingPreview.remove();
            }
        }
        
        // 隐藏画布
        function hideCanvas() {
            const imageOutput = document.getElementById('imageOutput');
            const placeholder = imageOutput.querySelector('.image-placeholder');
            const canvas = document.getElementById('encodedCanvas');
            const previewCanvas = imageOutput.querySelector('canvas:not(#encodedCanvas)');
            
            // 显示占位符，隐藏画布
            placeholder.style.display = 'flex';
            canvas.style.display = 'none';
            
            // 移除预览canvas
            if (previewCanvas) {
                previewCanvas.remove();
            }
        }
        
        // 下载图像
        function downloadImage() {
            const link = document.createElement('a');
            link.download = `binary-encoded-${Date.now()}.png`;
            link.href = encodedCanvas.toDataURL('image/png');
            link.click();
            showNotification('图像下载成功！', 'success');
        }
        
        // 解码图像为文本
        function decodeImageToText() {
            const file = imageInput.files[0];
            if (!file) {
                showNotification('请先选择图像文件', 'error');
                return;
            }
            
            // 显示加载指示器
            showLoading(true);
            
            const reader = new FileReader();
            
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    try {
                        // 验证图像尺寸
                        if (img.width !== CANVAS_WIDTH || img.height !== CANVAS_HEIGHT) {
                            showNotification(`图像尺寸必须为${CANVAS_WIDTH}×${CANVAS_HEIGHT}像素，当前为${img.width}×${img.height}像素`, 'error');
                            showLoading(false);
                            return;
                        }
                        
                        // 创建临时canvas处理图像
                        const tempCanvas = document.createElement('canvas');
                        tempCanvas.width = CANVAS_WIDTH;
                        tempCanvas.height = CANVAS_HEIGHT;
                        const tempCtx = tempCanvas.getContext('2d');
                        
                        // 绘制图像到canvas
                        tempCtx.drawImage(img, 0, 0);
                        
                        // 获取像素数据
                        const imageData = tempCtx.getImageData(0, 0, CANVAS_WIDTH, CANVAS_HEIGHT);
                        const data = imageData.data;
                        
                        // 从像素数据提取二进制字符串
                        const binaryString = extractBinaryFromImage(data);
                        
                        // 将二进制字符串转换为文本
                        const text = binaryToText(binaryString);
                        
                        // 显示解码结果
                        decodedText.textContent = text;
                        copyTextBtn.disabled = false;
                        
                        showNotification(`解码成功！从${binaryString.length}位二进制数据中解码出${text.length}个字符`, 'success');
                    } catch (error) {
                        console.error('解码错误:', error);
                        showNotification('解码过程中发生错误: ' + error.message, 'error');
                    } finally {
                        showLoading(false);
                    }
                };
                
                img.onerror = function() {
                    showNotification('无法加载图像文件', 'error');
                    showLoading(false);
                };
                
                img.src = e.target.result;
            };
            
            reader.onerror = function() {
                showNotification('无法读取文件', 'error');
                showLoading(false);
            };
            
            reader.readAsDataURL(file);
        }
        
        // 从图像数据提取二进制字符串
        function extractBinaryFromImage(data) {
            let binaryString = '';
            
            // 遍历所有像素（每个像素4个值：R,G,B,A）
            for (let i = 0; i < TOTAL_PIXELS && i * 4 < data.length; i++) {
                const pixelIndex = i * 4;
                const r = data[pixelIndex];
                const g = data[pixelIndex + 1];
                const b = data[pixelIndex + 2];
                
                // 如果RGB值都小于128，认为是黑色(1)，否则为白色(0)
                // 使用阈值判断，避免图像压缩带来的误差
                const isBlack = (r < 128 && g < 128 && b < 128);
                binaryString += isBlack ? '1' : '0';
            }
            
            return binaryString;
        }
        
        // 将二进制字符串转换为文本
        function binaryToText(binaryString) {
            let text = '';
            
            // 每7位一组转换为字符
            for (let i = 0; i < binaryString.length; i += 7) {
                if (i + 7 > binaryString.length) break;
                
                const binaryChunk = binaryString.substring(i, i + 7);
                const charCode = parseInt(binaryChunk, 2);
                
                // 如果遇到NULL字符(0)且文本已经有一定长度，可以提前结束
                // 但为了完整性，我们还是处理所有字符
                text += String.fromCharCode(charCode);
            }
            
            // 移除末尾的NULL字符
            while (text.length > 0 && text.charCodeAt(text.length - 1) === 0) {
                text = text.substring(0, text.length - 1);
            }
            
            return text;
        }
        
        // 复制解码文本
        function copyDecodedText() {
            const text = decodedText.textContent;
            
            // 使用Clipboard API
            navigator.clipboard.writeText(text).then(() => {
                showNotification('文本已复制到剪贴板', 'success');
            }).catch(err => {
                console.error('复制失败:', err);
                
                // 降级方案：使用textarea
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                
                try {
                    document.execCommand('copy');
                    showNotification('文本已复制到剪贴板', 'success');
                } catch (err) {
                    console.error('降级复制也失败:', err);
                    showNotification('复制失败，请手动复制文本', 'error');
                }
                
                document.body.removeChild(textArea);
            });
        }
        
        // 显示/隐藏加载指示器
        function showLoading(show) {
            if (show) {
                loadingIndicator.classList.add('active');
                encodeBtn.disabled = true;
                decodeBtn.disabled = true;
            } else {
                loadingIndicator.classList.remove('active');
                encodeBtn.disabled = false;
                decodeBtn.disabled = imageInput.files.length === 0;
            }
        }
        
        // 显示通知
        function showNotification(message, type = 'info') {
            // 设置通知内容和样式
            notificationMessage.textContent = message;
            notification.className = 'notification';
            notification.classList.add(type);
            
            // 设置图标
            let iconClass = 'fas fa-info-circle';
            if (type === 'success') iconClass = 'fas fa-check-circle';
            else if (type === 'error') iconClass = 'fas fa-exclamation-circle';
            
            notificationIcon.className = iconClass;
            
            // 显示通知
            notification.classList.add('show');
            
            // 3秒后自动隐藏
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // 示例文本
        window.addEventListener('load', function() {
            // 添加示例文本按钮
            const exampleBtn = document.createElement('button');
            exampleBtn.className = 'btn btn-secondary';
            exampleBtn.innerHTML = '<i class="fas fa-magic"></i> 加载示例文本';
            exampleBtn.style.marginTop = '10px';
            exampleBtn.onclick = loadExampleText;
            
            document.querySelector('.button-group').appendChild(exampleBtn);
        });
        
        function loadExampleText() {
            const exampleText = `Binary Image Encoder/Decoder

This tool encodes text into a binary image and decodes it back.

Each ASCII character (0-127) is converted to 7-bit binary representation. For example:
- 'A' (ASCII 65) becomes '1000001'
- 'B' (ASCII 66) becomes '1000010'
- 'a' (ASCII 97) becomes '1100001'
- 'b' (ASCII 98) becomes '1100010'

All bits are concatenated into a long binary string, which is then used to create a 980x1400 pixel image where 0=white and 1=black.

The maximum text length is 196,000 characters, which translates to 1,372,000 bits (980*1400).

Try encoding this text and then decoding the generated image!`;
            
            inputText.value = exampleText;
            updateCharCount();
            showNotification('示例文本已加载', 'info');
        }
    </script>
</body>
</html>
